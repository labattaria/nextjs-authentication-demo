datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  sessions Session[]
}

model Session {
  id        String   @id
  expiresAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Training {
  id          Int    @id @default(autoincrement())
  title       String @unique
  image       String
  description String
}
